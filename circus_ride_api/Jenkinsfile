pipeline{
    agent any

    environment {
        PROJECT_DIR = "circus_ride_api"
    }

    triggers{
        pollSCM('* * * * *')
    }

    stages{
        stage('Build'){
            steps{
                sh '''
                    echo "Hello World"
                    echo "We are building the project"
                '''
            }
        }

        stage('Test'){
            steps{
                sh '''
                    echo "Bye World"
                    echo "We are testing the project"
                '''
            }
        }
    }
}